<section class="rounded-2xl bg-[var(--card)] ring-1 ring-[var(--border)] shadow-sm p-6">
  <div class="mx-auto max-w-3xl flex items-center justify-center">
    <div class="flex flex-col items-center gap-4 md:flex-row md:items-center md:gap-6">
      <!-- avatar -->
      <%= image_tag avatar_src(192),
            alt: display_name,
            class: "w-24 h-24 md:w-28 md:h-28 rounded-full ring-2 ring-[var(--border)] object-cover shrink-0" %>

      <!-- text -->
      <div class="min-w-0 flex-1 text-center md:text-left">
        <h1 class="text-2xl md:text-3xl font-semibold truncate"><%= display_name %></h1>
        <p class="mt-1 text-sm text-[var(--muted)] truncate"><%= handle %></p>

        <% if @user.respond_to?(:bio) && @user.bio.present? %>
          <p class="mt-3 text-sm leading-relaxed text-[var(--muted-contrast)]">
            <%= @user.bio %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
