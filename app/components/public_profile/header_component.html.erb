<section class="rounded-2xl bg-[var(--card)] ring-1 ring-[var(--border)] p-8">
  <div class="flex flex-col items-center text-center">
    <!-- Big Avatar -->
    <%= image_tag avatar_src(512), # load a large source
    alt: display_name,
    class: "w-56 h-56 rounded-full ring-2 ring-[var(--border)] object-cover mb-6" %>
    <!-- Name -->
    <h1 class="text-3xl font-bold break-words"><%= display_name %></h1>
    <!-- Handle -->
    <p class="mt-2 text-lg text-[var(--muted)] break-words"><%= handle %></p>
    <!-- Bio -->
    <% if @user.respond_to?(:bio) && @user.bio.present? %>
      <p class="mt-4 text-base leading-relaxed text-[var(--muted-contrast)] max-w-md">
        <%= @user.bio %>
      </p>
    <% end %>

  </div>
</section>
