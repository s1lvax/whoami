<section class="rounded-2xl bg-[var(--card)] ring-1 ring-[var(--border)] p-8">
  <div class="flex flex-col items-center text-center">
    <!-- Big Avatar -->
    <%= image_tag avatar_src(512),
    fetchpriority: "high",
    alt: display_name,
    class: "w-32 h-32 sm:w-36 sm:h-36 md:w-40 md:h-40 lg:w-56 lg:h-56 rounded-full ring-2 ring-[var(--border)] object-cover mb-6" %>
    <!-- Name -->
    <h1 class="text-3xl font-bold break-words"><%= display_name %></h1>
    <!-- Handle -->
    <p class="mt-2 text-lg text-[var(--muted)] break-words"><%= handle %></p>
  </div>
  <!-- Bio (centered container, but left-aligned text) -->
  <% if @user.respond_to?(:bio) && @user.bio.present? %>
    <div class="mt-4 max-w-md mx-auto text-left">
      <p class="text-base leading-relaxed text-[var(--muted-contrast)]">
        <%= @user.bio %>
      </p>
    </div>
  <% end %>
</section>
