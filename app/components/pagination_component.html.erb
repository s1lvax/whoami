<% if pagy && pagy.pages > 1 %>
  <div class="flex items-center justify-between border-t border-[var(--border)] bg-[var(--card)] px-4 py-3 sm:px-6 rounded-b-2xl">
    <!-- Mobile -->
    <div class="flex flex-1 justify-between sm:hidden">
      <% if pagy.prev %>
        <%= link_to "Previous",
          url_for(request.params.merge(page: pagy.prev)),
          class: "relative inline-flex items-center rounded-md ring-1 ring-[var(--border)] bg-[var(--surface)] px-4 py-2 text-sm font-medium text-[var(--text)] hover:bg-[var(--surface-2)]" %>
      <% else %>
        <span class="relative inline-flex items-center rounded-md ring-1 ring-[var(--border)] bg-[var(--surface)] px-4 py-2 text-sm font-medium text-[var(--muted)] cursor-not-allowed">
          Previous
        </span>
      <% end %>

      <% if pagy.next %>
        <%= link_to "Next",
          url_for(request.params.merge(page: pagy.next)),
          class: "relative inline-flex items-center rounded-md ring-1 ring-[var(--border)] bg-[var(--surface)] px-4 py-2 text-sm font-medium text-[var(--text)] hover:bg-[var(--surface-2)]" %>
      <% else %>
        <span class="relative inline-flex items-center rounded-md ring-1 ring-[var(--border)] bg-[var(--surface)] px-4 py-2 text-sm font-medium text-[var(--muted)] cursor-not-allowed">
          Next
        </span>
      <% end %>
    </div>

    <!-- Desktop -->
    <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
      <div>
        <p class="text-sm text-[var(--muted)]">
          Showing
          <span class="font-medium text-[var(--text)]"><%= pagy.offset + 1 %></span>
          to
          <% last = pagy.offset + pagy.vars[:limit] %>
          <span class="font-medium text-[var(--text)]"><%= last > pagy.count ? pagy.count : last %></span>
          of
          <span class="font-medium text-[var(--text)]"><%= pagy.count %></span>
          results
        </p>
      </div>
      <div>
        <nav class="isolate inline-flex -space-x-px rounded-md shadow-xs" aria-label="Pagination">
          <!-- Prev arrow -->
          <%= link_to (pagy.prev ? url_for(request.params.merge(page: pagy.prev)) : "#"),
              class: [
                "relative inline-flex items-center rounded-l-md px-2 py-2",
                "ring-1 ring-[var(--border)] bg-[var(--surface)] text-[var(--text)] hover:bg-[var(--surface-2)] focus:z-20 focus:outline-offset-0",
                ("pointer-events-none text-[var(--muted)]" unless pagy.prev)
              ].compact.join(" ") do %>
            <span class="sr-only">Previous</span>
            <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd"/>
            </svg>
          <% end %>

          <!-- Page series -->
          <% pagy.series.each do |item| %>
            <% if item == :gap %>
              <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-[var(--text)] ring-1 ring-[var(--border)] bg-[var(--surface)]">â€¦</span>
            <% elsif item == pagy.page %>
              <span aria-current="page" class="relative z-10 inline-flex items-center bg-red-500 px-4 py-2 text-sm font-semibold text-white focus:z-20 rounded-md">
                <%= item %>
              </span>
            <% else %>
              <%= link_to item,
                url_for(request.params.merge(page: item)),
                class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-[var(--text)] ring-1 ring-[var(--border)] bg-[var(--surface)] hover:bg-[var(--surface-2)] focus:z-20 focus:outline-offset-0" %>
            <% end %>
          <% end %>

          <!-- Next arrow -->
          <%= link_to (pagy.next ? url_for(request.params.merge(page: pagy.next)) : "#"),
              class: [
                "relative inline-flex items-center rounded-r-md px-2 py-2",
                "ring-1 ring-[var(--border)] bg-[var(--surface)] text-[var(--text)] hover:bg-[var(--surface-2)] focus:z-20 focus:outline-offset-0",
                ("pointer-events-none text-[var(--muted)]" unless pagy.next)
              ].compact.join(" ") do %>
            <span class="sr-only">Next</span>
            <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd"/>
            </svg>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
<% end %>
