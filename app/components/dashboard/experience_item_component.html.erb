<li class="relative pl-6 pb-6 last:pb-0">
  <!-- timeline dot & line -->
  <span
    class="
      absolute left-0 top-1.5 inline-block size-2 rounded-full bg-[var(--text)]
    "
  ></span>
  <span class="absolute left-0 top-2.5 bottom-0 w-px bg-[var(--border)]"></span>

  <div class="flex items-start justify-between gap-4">
    <div>
      <h4 class="text-sm font-medium"><%= @role %>
        ·
        <span class="text-[var(--muted)]"><%= @company %></span></h4>
      <p class="text-xs text-[var(--muted)]"><%= period %>
        ·
        <%= @location %></p>

      <% if @highlights.any? %>
        <ul class="mt-2 list-disc pl-5 text-sm space-y-1">
          <% @highlights.each do |h| %>
            <li><%= h %></li>
          <% end %>
        </ul>
      <% end %>

      <% if @tech.any? %>
        <div class="mt-2 flex flex-wrap gap-1.5">
          <% @tech.each do |t| %>
            <span
              class="
                text-xs px-2 py-0.5 rounded ring-1 ring-[var(--border)] bg-[var(--surface-2)]
              "
            ><%= t %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</li>
