<div class="min-h-screen flex items-center justify-center bg-[var(--bg)] px-4">
  <div class="w-full max-w-md bg-[var(--card)] rounded-xl shadow-md p-8">
    <h2 class="text-2xl font-semibold mb-6 text-center text-[var(--text)]">
      Sign up
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= render InputComponent.new(
        form: f,
        field: :email,
        type: :email,
        label: "Email",
        autocomplete: "email",
        autofocus: true
      ) %>

      <%= render InputComponent.new(
        form: f,
        field: :password,
        type: :password,
        label: "Password",
        autocomplete: "new-password",
        hint: (@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : nil)
      ) %>

      <%= render InputComponent.new(
        form: f,
        field: :password_confirmation,
        type: :password,
        label: "Confirm password",
        autocomplete: "new-password"
      ) %>

      <%= render ButtonComponent.new(type: :submit, style: :primary, full_width: true) do %>
        Sign up
      <% end %>
    <% end %>

    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
