<%= turbo_frame_tag "username_status" do %>
  <% tone = @status[:tone] %>
  <% cls =
      case tone
      when :ok    then "text-sm font-medium text-emerald-400"
      when :error then "text-sm font-medium text-red-400"
      else             "text-sm text-[var(--muted)]"
      end %>
  <span class="<%= cls %>"><%= @status[:text] %></span>
<% end %>

