
<!-- app/views/onboardings/show.html.erb -->
<div class="min-h-screen flex items-center justify-center bg-[var(--bg)] px-4">
  <div class="w-full max-w-md bg-[var(--card)] rounded-xl shadow-md p-8">
    <h2 class="text-2xl font-semibold mb-6 text-center text-[var(--text)]">
      <%= {
            "name"     => "Welcome",
            "username" => "Choose a username",
            "bio"      => "Write a short bio",
            "links"    => "Add your favorite links",
            "avatar"   => "Add a profile picture"
          }[@step] %>
    </h2>

    <!-- Progress (keep your component if you prefer) -->
    <div class="mb-6">
      <div class="mt-2 text-xl text-[var(--muted)] text-center">
        Step <%= { "name" => 1, "username" => 2, "bio" => 3, "links" => 4, "avatar" => 5 }[@step] %> of 5
      </div>
    </div>

    <% case @step
   when "name" %>
  <%= render Onboarding::StepNameComponent.new(user: @user) %>
<% when "username" %>
  <%= render Onboarding::StepUsernameComponent.new(user: @user) %>
<% when "bio" %>
  <%= render Onboarding::StepBioComponent.new(user: @user) %>
<% when "links" %>
  <%= render Onboarding::StepLinksComponent.new(user: @user) %>
<% else %>
  <%= render Onboarding::StepAvatarComponent.new(user: @user) %>
<% end %>


  </div>
</div>
